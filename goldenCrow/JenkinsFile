pipeline { 
        agent none
        stages {
                stage('Docker build') {
                        agent any
                        steps {
                                sh 'docker build -t goldencrow ./goldenCrow'
                        }
                }
                stage('Docker run') {
                        agent any
                        steps {
                                sh 'docker ps -f name=goldencrow -q \
                                        | xargs --no-run-if-empty docker container stop'

                                sh 'docker container ls -a -f name=goldencrow -q \
                                        | xargs -r docker container rm'


                                sh 'docker run -d --name goldencrow -p 8080:8080 -v /home/ubuntu/crow_data:/home/ubuntu/crow_data goldencrow'
                        }
                }
        }

}